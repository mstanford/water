library test
library math



test math

	;
	; add
	;
	assert.equals 5 (+ 2 3)

	;
	; subtract
	;
	assert.equals 1 (- 3 2)

	;
	; subtract
	;
	assert.equals -1 (- 2 3)

	;
	; multiply
	;
	assert.equals 8 (* 2 4)

	;
	; divide
	;
	assert.equals 3 (/ 27 9)

	;
	; remainder
	;
	assert.equals 1 (% 28 9)

	;
	; abs
	;
	assert.equals 1 (abs -1)

	;
	; min
	;
	assert.equals 1 (math.min 1 2)
	assert.equals 1 (math.min 2 1)

	;
	; max
	;
	assert.equals 2 (math.max 1 2)
	assert.equals 2 (math.max 2 1)

	;
	; greater-than
	;
	assert.true (> 3 2)

	;
	; less-than
	;
	assert.true (< 1 2)

	;
	; greater-than-or-equals
	;
	assert.true (>= 3 2)
	assert.true (>= 2 2)

	;
	; less-than-or-equals
	;
	assert.true (<= 1 2)
	assert.true (<= 2 2)

end_test
